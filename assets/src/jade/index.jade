doctype html

head
	meta(charset='utf-8')
	meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
	meta(name="description" content="tetris classic классический тетрис")
	meta(name="keywords" content="tetris classic классический тетрис js jquery")
	link(rel='stylesheet' href='css/main.min.css')
	title Tetris by Otto-Vector
body
	#megacontainer
		header
			h1 TETRIS CLASSIC
		#container
			.left
				button#down down
				button#left left
			#center
				.center
					.box_wraper
						.box
							- for (var i=0; i<400; i++) {
								if ((i%10 == 0) && (i%20 != 0))
									.dot.wall 
								else
									.dot
							- }
			.right
				button#flip flip
				button#right right
		.after
			#start NEW GAME
			#pause PAUSE


