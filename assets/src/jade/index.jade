doctype html

head
	meta(charset='utf-8')
	meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
	meta(name="description" content="Tetris Classic классический тетрис online")
	meta(name="keywords" content="tetris classic классический тетрис js jquery tetris-online")
	link(rel='stylesheet' href='css/main.min.css')
	title Tetris by Otto-Vector
body
	#megacontainer
		//- header
			h1 TETRIS CLASSIC
		#container
			.left
				div
					.start
						div
				.down
					#left
						//- div left
					#down
						//- div down
			#center
				.center
					.box_wraper
						.box
							- for (var i=0; i<400; i++) {
								if ((i%10 == 0) && (i%20 != 0))
									.dot.wall 
								else
									.dot
							- }
			.right
				div
					.pause
						//- div pause
				.down
					#right
						//- div right
					#flip
						//- div flip
		.after
			#start NEW GAME
			#pause PAUSE


	//- footer
		h3 HOW TO PLAY
		p Use 
			u "Left/Right Arrow" 
			| keys to move it horizontal
		p Use 
			u "Up" 
			| key to flip it
		p Use 
			u "Down" 
			| key to acceleration down
		p Use 
			u "SpaceBar" 
			| key to drop down figure
	script(src='js/main.js')
